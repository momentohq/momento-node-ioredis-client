{
  "name": "@gomomento-poc/node-ioredis-client",
  "version": "0.1.0",
  "description": "Momento wrapper for @ioredis",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "files": [
    "dist/src"
  ],
  "scripts": {
    "prebuild": "eslint . --ext .ts",
    "lint": "eslint . --ext .ts",
    "format": "eslint . --ext .ts --fix",
    "watch": "tsc -w",
    "build": "rm -rf dist && tsc",
    "test": "npm run test-momento",
    "test-momento": "CACHE_NAME=default-cache DEFAULT_TTL_SECONDS=60 MOMENTO_ENABLED=true jest"
  },
  "author": "",
  "license": "Apache-2.0",
  "dependencies": {
    "@gomomento/sdk": "1.12.16",
    "ioredis": "^5.3.2"
  },
  "devDependencies": {
    "typescript": "5.0.4",
    "@types/jest": "^29.5.0",
    "@types/node": "^18.15.11",
    "@types/uuid": "^9.0.1",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.25.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-promise": "^5.1.0",
    "jest": "^29.5.0",
    "jest-extended": "^3.2.4",
    "prettier": "^2.4.1",
    "ts-jest": "^29.0.5",
    "uuid": "^9.0.0"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:@typescript-eslint/recommended-requiring-type-checking",
      "plugin:import/recommended",
      "plugin:prettier/recommended",
      "plugin:node/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": 12,
      "project": "./tsconfig.json"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "semi": [
        "error",
        "always"
      ],
      "import/no-extraneous-dependencies": [
        "error",
        {}
      ],
      "node/no-unsupported-features/es-syntax": "off",
      "node/no-missing-import": [
        "error",
        {
          "tryExtensions": [
            ".js",
            ".ts",
            ".json",
            ".node"
          ]
        }
      ],
      "prettier/prettier": "error",
      "block-scoped-var": "error",
      "eqeqeq": "error",
      "no-var": "error",
      "prefer-const": "error",
      "eol-last": "error",
      "prefer-arrow-callback": "error",
      "no-trailing-spaces": "error",
      "quotes": [
        "warn",
        "single",
        {
          "avoidEscape": true
        }
      ],
      "no-restricted-properties": [
        "error",
        {
          "object": "describe",
          "property": "only"
        },
        {
          "object": "it",
          "property": "only"
        }
      ],
      "require-await": "error",
      "@typescript-eslint/require-await": "error",
      "import/no-duplicates": "error"
    },
    "settings": {
      "import/resolver": {
        "node": {
          "extensions": [
            ".js",
            ".jsx",
            ".ts",
            ".tsx"
          ]
        }
      }
    },
    "ignorePatterns": [
      "dist",
      "node_modules",
      "examples",
      "**/*.d.ts",
      "jest*.config.ts"
    ]
  },
  "jest": {
    "setupFilesAfterEnv": [
      "jest-extended/all"
    ],
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/test"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testTimeout": 30000
  }
}
